extends layout

block content 
  form(action='' method='POST') 
    label(for='category_name') Category Name: 
    input(
      id='category_name' 
      placeholder='Short abbreivated names like CPU, GPU, ...' 
      name='name' 
      required='true' 
      value=category ? category.name : null
      )

    label(for='category_description') Category Description:
    input(
      id='category_description' 
      placeholder='A brief overview of the category' 
      name='description' 
      required='true' 
      value=category ? category.description : null
      ) 

    if pass
      label(for='secret_pass') Secret Password: 
      input(
        id='secret_pass'
        placeholder='Enter the secret password to make changes!'
        name='secret_pass'
        required=true
      )
      hr
      if warning
        div #{warning}
    
    input(
      type= 'submit'
    )

  if errors
    ul 
    each error in errors
      li!= error.msg